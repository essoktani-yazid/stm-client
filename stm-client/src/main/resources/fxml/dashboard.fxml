<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<ScrollPane fitToWidth="true" styleClass="dashboard-scroll" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smarttask.client.view.controller.DashboardController">
    <content>
        <VBox spacing="25.0" styleClass="dashboard-container">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <HBox fx:id="smartHeaderCard" alignment="CENTER_LEFT" spacing="20" styleClass="smart-header-card">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>
                
                <StackPane fx:id="moodContainer" styleClass="mood-indicator-container">
                     <Label fx:id="moodEmojiLabel" style="-fx-font-size: 36px;" text="â³" />
                </StackPane>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label fx:id="insightTitleLabel" styleClass="insight-title" text="Analyzing..." />
                    <Label fx:id="insightMessageLabel" styleClass="insight-message" text="Loading your stats..." wrapText="true" />
                </VBox>

                <Button fx:id="smartActionButton" styleClass="btn-smart-action" visible="false" />
            </HBox>

            <HBox spacing="20">
                <VBox HBox.hgrow="ALWAYS" styleClass="metric-card">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <StackPane styleClass="icon-container, icon-purple">
                            <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z" styleClass="metric-icon" />
                        </StackPane>
                        <Label styleClass="metric-label" text="Productivity" />
                    </HBox>
                    <Region VBox.vgrow="ALWAYS" />
                    <Label fx:id="productivityScoreLabel" styleClass="metric-value" text="0%" />
                    <Label fx:id="productivityTrendLabel" styleClass="metric-trend" text="..." />
                </VBox>

                <VBox HBox.hgrow="ALWAYS" styleClass="metric-card">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <StackPane styleClass="icon-container, icon-red">
                            <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" styleClass="metric-icon" />
                        </StackPane>
                        <Label styleClass="metric-label" text="Overdue" />
                    </HBox>
                    <Region VBox.vgrow="ALWAYS" />
                    <Label fx:id="overdueTasksLabel" styleClass="metric-value, text-red" text="0" />
                    <Label styleClass="metric-trend" text="Critical tasks" />
                </VBox>

                <VBox HBox.hgrow="ALWAYS" styleClass="metric-card">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <StackPane styleClass="icon-container, icon-green">
                            <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" styleClass="metric-icon" />
                        </StackPane>
                        <Label styleClass="metric-label" text="Completed" />
                    </HBox>
                    <Region VBox.vgrow="ALWAYS" />
                    <Label fx:id="tasksDoneLabel" styleClass="metric-value" text="0" />
                    <Label styleClass="metric-trend" text="Total done" />
                </VBox>
            </HBox>

            <HBox spacing="20" VBox.vgrow="ALWAYS">
                <VBox HBox.hgrow="ALWAYS" styleClass="chart-card">
                    <Label styleClass="chart-title" text="Weekly Performance" />
                    <BarChart fx:id="performanceChart" legendVisible="false" verticalGridLinesVisible="false">
                         <xAxis>
                            <CategoryAxis label="Day" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Tasks" />
                        </yAxis>
                    </BarChart>
                </VBox>

                <VBox HBox.hgrow="ALWAYS" styleClass="chart-card">
                    <Label styleClass="chart-title" text="Project Distribution" />
                    <PieChart fx:id="timeDistributionChart" legendSide="BOTTOM" labelsVisible="false" />
                </VBox>

                <VBox spacing="15" styleClass="chart-card" HBox.hgrow="ALWAYS" prefWidth="250">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="chart-title" text="ðŸ”¥ Urgent Tasks" />
                    </HBox>
                    <VBox fx:id="upcomingTasksContainer" spacing="10" />
                </VBox>
            </HBox>

        </VBox>
    </content>
</ScrollPane>