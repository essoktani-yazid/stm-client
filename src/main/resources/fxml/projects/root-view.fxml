<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smarttask.client.view.controller.projects.ProjectsRootController"
            styleClass="projects-root"
            stylesheets="@../../css/projects/projects.css"> <top>
        <VBox styleClass="header-container">
            <padding><Insets top="25" right="40" bottom="25" left="40"/></padding>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5">
                    <Label text="Mes Projets" styleClass="app-title" />
                    <Label text="Sélectionnez un projet pour voir les tâches" style="-fx-text-fill: -app-text-muted;" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="+ Nouveau Projet" onAction="#handleCreateProject" 
                        styleClass="primary-action-button" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="main-content-scroll">
            <content>
                <VBox fx:id="projectsContainer" spacing="15" styleClass="projects-grid-container" />
            </content>
        </ScrollPane>
    </center>
</BorderPane>