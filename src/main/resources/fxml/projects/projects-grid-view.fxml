<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smarttask.client.view.controller.projects.ProjectsViewController"
            style="-fx-font-family: 'Segoe UI', 'Roboto', sans-serif;">

    <top>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f9fafb; -fx-border-color: transparent transparent #e5e7eb transparent; -fx-border-width: 0 0 1 0;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Mes Projets" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="➕ Nouveau Projet" onAction="#onAddProject" 
                        style="-fx-background-color: #4f46e5; -fx-text-fill: white; -fx-padding: 10 16; -fx-font-weight: bold; -fx-border-radius: 6; -fx-background-radius: 6; -fx-cursor: hand;"/>
            </HBox>
            
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher un projet..." HBox.hgrow="ALWAYS"
                          style="-fx-padding: 8 12; -fx-font-size: 12px; -fx-border-radius: 6; -fx-background-radius: 6;"/>
                <ComboBox fx:id="filterCombo" promptText="Filtrer..." prefWidth="150"
                         style="-fx-font-size: 12px; -fx-border-radius: 6; -fx-background-radius: 6;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white; -fx-border-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20;">
                <GridPane fx:id="projectsGrid" hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="300" hgrow="SOMETIMES"/>
                        <ColumnConstraints prefWidth="300" hgrow="SOMETIMES"/>
                        <ColumnConstraints prefWidth="300" hgrow="SOMETIMES"/>
                    </columnConstraints>
                </GridPane>
                
                <Label fx:id="emptyLabel" text="Aucun projet. Cliquez sur 'Nouveau Projet' pour en créer un."
                       style="-fx-text-fill: #9ca3af; -fx-font-size: 14px; -fx-text-alignment: center;" visible="false"/>
            </VBox>
        </ScrollPane>
    </center>

    <right>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb transparent transparent transparent; -fx-border-width: 0 0 0 1; -fx-min-width: 350;" fx:id="detailsPanel" visible="false">
            <Label text="Détails du Projet" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
            
            <Separator/>
            
            <VBox spacing="10">
                <Label text="Nom" style="-fx-font-weight: bold; -fx-text-fill: #6b7280;"/>
                <Label fx:id="projectNameLabel" text="" style="-fx-font-size: 16px; -fx-text-fill: #111827;"/>
            </VBox>
            
            <VBox spacing="10">
                <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #6b7280;"/>
                <TextArea fx:id="projectDescriptionArea" wrapText="true" prefRowCount="4" editable="false"
                         style="-fx-control-inner-background: white; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6;"/>
            </VBox>
            
            <VBox spacing="10">
                <Label text="Couleur" style="-fx-font-weight: bold; -fx-text-fill: #6b7280;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region fx:id="colorPreview" prefWidth="40" prefHeight="40" style="-fx-border-radius: 6; -fx-background-radius: 6;"/>
                    <Label fx:id="colorCodeLabel" text="#3788d8" style="-fx-font-family: monospace; -fx-text-fill: #4b5563;"/>
                </HBox>
            </VBox>
            
            <VBox spacing="10">
                <Label text="Statistiques" style="-fx-font-weight: bold; -fx-text-fill: #6b7280;"/>
                <HBox spacing="15">
                    <VBox spacing="5" alignment="CENTER">
                        <Label fx:id="tasksCountLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4f46e5;"/>
                        <Label text="Tâches" style="-fx-font-size: 11px; -fx-text-fill: #9ca3af;"/>
                    </VBox>
                    <VBox spacing="5" alignment="CENTER">
                        <Label fx:id="completedCountLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
                        <Label text="Complétées" style="-fx-font-size: 11px; -fx-text-fill: #9ca3af;"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <HBox spacing="10">
                <Button text="Modifier" onAction="#onEditProject" HBox.hgrow="ALWAYS"
                       style="-fx-background-color: white; -fx-text-fill: #4f46e5; -fx-border-color: #c7d2fe; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Button text="Supprimer" onAction="#onDeleteProject" HBox.hgrow="ALWAYS"
                       style="-fx-background-color: #fef2f2; -fx-text-fill: #dc2626; -fx-border-color: #fecaca; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-cursor: hand; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </right>

</BorderPane>
