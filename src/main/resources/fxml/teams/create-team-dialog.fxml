<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smarttask.client.view.controller.teams.CreateTeamDialogController"
      spacing="18"
      styleClass="create-team-dialog"
      stylesheets="@../../css/teams/create-team-dialog.css">

    <padding>
        <Insets topRightBottomLeft="25"/>
    </padding>

    <VBox spacing="4">
        <Label text="Créer une nouvelle équipe" styleClass="dialog-title">
            <font>
                <Font name="System Bold" size="20"/>
            </font>
        </Label>
        <Label text="Configurez l'espace de travail de votre équipe"
               styleClass="dialog-subtitle"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Nom de l'équipe" styleClass="field-label"/>
        <TextField fx:id="nameField"
                   promptText="ex: Équipe Produit"
                   styleClass="dialog-input"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Description" styleClass="field-label"/>
        <TextArea fx:id="descriptionField"
                  promptText="Quel est l'objectif de cette équipe ?"
                  prefRowCount="3"
                  wrapText="true"
                  styleClass="dialog-textarea"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Couleur de l'équipe" styleClass="field-label"/>
        <ColorPicker fx:id="colorPicker"
                     styleClass="dialog-color-picker"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Ajouter des membres" styleClass="field-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ComboBox fx:id="userSelectionCombo"
                      promptText="Sélectionner un utilisateur..."
                      prefWidth="300"
                      styleClass="dialog-combo"/>
            <Button text="Ajouter"
                    onAction="#handleAddMember"
                    styleClass="dialog-button-add"/>
        </HBox>
        <FlowPane fx:id="selectedMembersPane"
                  hgap="6"
                  vgap="6"
                  styleClass="selected-members-pane"/>
    </VBox>

    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Annuler"
                onAction="#handleCancel"
                styleClass="dialog-button-secondary"/>

        <Button text="Créer l'équipe"
                onAction="#handleCreate"
                styleClass="dialog-button-primary"/>
    </HBox>

</VBox>