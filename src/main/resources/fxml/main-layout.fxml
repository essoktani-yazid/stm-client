<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.smarttask.client.view.controller.MainLayoutController" 
            styleClass="main-container"
            stylesheets="@../css/main-layout.css" >
   
   <left>
      <VBox prefWidth="250.0" styleClass="sidebar-creative" spacing="0.0">
         <children>
            
            <StackPane styleClass="sidebar-header-creative">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="2.0">
                     <children>
                        <Label text="SMART" styleClass="logo-text-top">
                           <font><Font name="System Bold" size="11.0" /></font>
                        </Label>
                        <Label text="TASK.AI" styleClass="logo-text-main">
                           <font><Font name="System Bold" size="22.0" /></font>
                        </Label>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="25.0" right="20.0" top="35.0" />
               </padding>
            </StackPane>
            
            <VBox spacing="8.0" styleClass="nav-menu" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="MAIN MENU" styleClass="menu-category-label" />
                  
                  <Button fx:id="tasksButton" maxWidth="Infinity" onAction="#showTasks" 
                          styleClass="nav-button-creative" text="Dashboard" />
                          
                  <Button fx:id="calendarButton" maxWidth="Infinity" onAction="#showCalendar" 
                          styleClass="nav-button-creative" text="Calendar" />
                  
                  <Button fx:id="teamsButton" maxWidth="Infinity" onAction="#showTeams" 
							styleClass="nav-button-creative" text="Teams" />

                  <Button fx:id="projectsButton" maxWidth="Infinity" onAction="#showProjects" 
                          styleClass="nav-button-creative" text="Projects" />

                  <Button fx:id="analyticsButton" maxWidth="Infinity" onAction="#showAnalytics" 
                          styleClass="nav-button-creative" text="Reports" />

                  <StackPane alignment="TOP_RIGHT" maxWidth="Infinity">
                     <Button fx:id="notificationButton" maxWidth="Infinity" onAction="#showNotifications" 
                              styleClass="nav-button-creative" text="Notifications" />
                     
                     <Label fx:id="notificationBadge" visible="false" text="0"
                           style="-fx-background-color: #FF4B4B; 
                                    -fx-text-fill: white; 
                                    -fx-background-radius: 10; 
                                    -fx-min-width: 18; 
                                    -fx-min-height: 18; 
                                    -fx-alignment: center; 
                                    -fx-font-size: 10px; 
                                    -fx-font-weight: bold;
                                    -fx-translate-x: -5; 
                                    -fx-translate-y: 5;"
                           mouseTransparent="true" />
                  </StackPane>

                  <Region prefHeight="15.0" />
                  <Label text="INTELLIGENCE" styleClass="menu-category-label" />
                  
                  <Button fx:id="aiButton" maxWidth="Infinity" onAction="#showAI" 
                          styleClass="nav-button-creative-special" text="âœ¨ AI Assistant" />
               </children>
               <padding>
                  <Insets left="15.0" right="15.0" top="10.0" />
               </padding>
            </VBox>
            
            <VBox styleClass="user-profile-card" spacing="12.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="12.0" onMouseClicked="#showProfile" style="-fx-cursor: hand;">
                     <children>
                        <StackPane styleClass="avatar-circle">
                           <Label fx:id="userInitialLabel" text="U" textFill="WHITE" style="-fx-font-weight: bold;"/>
                        </StackPane>
                        <VBox>
                           <Label fx:id="userLabel" text="" styleClass="user-name" />
                           <Label fx:id="userEmailLabel" text="" styleClass="user-email" />
                        </VBox>
                     </children>
                  </HBox>
                  <Button fx:id="logoutButton" maxWidth="Infinity" onAction="#handleLogout" 
                          styleClass="logout-button-creative" text="Logout" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </left>
   
   <center>
      <StackPane fx:id="contentPane" styleClass="center-content-area" />
   </center>
</BorderPane>
